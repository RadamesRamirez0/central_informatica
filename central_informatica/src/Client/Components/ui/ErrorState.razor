<div class="flex flex-col gap-1.5 bg py-2 px-3 bg-red-300 border border-red-500">
    <p>Error: @ErrorMessage</p>
    <button class="btn btn-primary" @onclick="OnRetry">Reintentar</button>
</div>

@code {
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public EventCallback OnRetry { get; set; }
}
