@using central_informatica.src.Shared.Models

<tr>
    <td>@Persona.ID</td>
    <td>@Persona.Nombre</td>
    <td>@Persona.ApellidoPaterno</td>
    <td>@Persona.ApellidoMaterno</td>
    <td>@Persona.FechaNacimiento.ToString("dd/MM/yyyy")</td>
    <td>@GetGenreString(Persona.Sexo)</td>
    <td class="flex justify-center gap-1.5 py-1.5">
        <button @onclick="() => OnEdit.InvokeAsync(Persona.ID)"
            class="z-10 cursor-pointer border border-blue-600 hover:bg-blue-300 hover:border-blue-800 transition-colors rounded-full leading-0 size-9">✏️</button>
        <button @onclick="() => OnDelete.InvokeAsync(Persona.ID)"
            class="z-10 cursor-pointer border border-red-600 hover:bg-red-300 hover:border-red-800 transition-colors rounded-full leading-0 size-9">🗑️</button>
    </td>
</tr>

@code {
    [Parameter] public Persona Persona { get; set; } = new();
    [Parameter] public EventCallback<int> OnEdit { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private string GetGenreString(char sexo)
    {
        if (sexo == 'M')
        {
            return "Masculino";
        }
        return "Femenino";
    }
}
